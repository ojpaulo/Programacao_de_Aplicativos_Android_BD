<?xml version="1.0" encoding="utf-8"?>

  <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wpos.com.br.filmesdb.MainActivity">


        <!-- Caixa de Seleção com o Tipo de Gênero -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/lblGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblGenero" />
            <Spinner
                android:id="@+id/spiGenero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <!-- Campo para a titulo do filme -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblTitulo" />
            <EditText
                android:id="@+id/txtTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10">
                <requestFocus />
            </EditText>
        </LinearLayout>


        <!-- Diretor do filme -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/lblDiretor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblDiretor" />
            <EditText
                android:id="@+id/txtDiretor"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>

        <!-- Ano Lançamento -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/lblanoLancamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lblanoLancamento" />
            <EditText
                android:id="@+id/txtanoLancamento"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />
        </LinearLayout>



    <!-- Botão Cadastrar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:gravity="center" >
            <Button
                android:id="@+id/btnCadastrar"
                android:text="@string/btnCadastrar"
                android:onClick="cadastrarFilme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/linhaMensagem"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/txtMensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Mensagem"/>

    </LinearLayout>


    </LinearLayout>